<!DOCTYPE html>
<html>
<head>
    <title>Sovereign Literacy Platform - See The Fraud</title>
    <style>
        body { font-family: Arial; margin: 40px; background: #000; color: #0f0; }
        .container { max-width: 800px; margin: 0 auto; }
        .tool { margin: 20px 0; padding: 20px; border: 1px solid #0f0; }
        textarea { width: 100%; height: 200px; background: #111; color: #0f0; }
        button { background: #0f0; color: #000; padding: 10px; border: none; }
    </style>
</head>
<body>
    <div class="container">
        <h1>üîì SOVEREIGN LITERACY PLATFORM</h1>
        <h2>See The Fraud - Break The Chains</h2>
        
        <div class="tool">
            <h3>üìÑ LEGAL DOCUMENT DECODER</h3>
            <textarea id="legalText" placeholder="Paste any legal document here..."></textarea>
            <button onclick="analyzeDocument()">EXPOSE THE TRAPS</button>
            <div id="legalAnalysis"></div>
        </div>

        <div class="tool">
            <h3>üí∞ MORTGAGE FRAUD CALCULATOR</h3>
            <input type="number" id="loanAmount" placeholder="Loan amount">
            <button onclick="exposeMortgageFraud()">SHOW THE THEFT</button>
            <div id="fraudResult"></div>
        </div>

        <div class="tool">
            <h3>‚öñÔ∏è SOVEREIGNTY DOCUMENT GENERATOR</h3>
            <input type="text" id="userName" placeholder="Your true name">
            <button onclick="generateSovereigntyDocs()">CREATE FREEDOM DOCS</button>
            <div id="sovereigntyDocs"></div>
        </div>

        <div class="tool">
            <h3>üìö UCC TRUTH DATABASE</h3>
            <button onclick="showUCCTruth()">REVEAL BANKING SECRETS</button>
            <div id="uccTruth"></div>
        </div>
    </div>

    <script>
        async function analyzeDocument() {
            const text = document.getElementById('legalText').value;
            const response = await fetch('/analyze', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({text: text})
            });
            const analysis = await response.json();
            document.getElementById('legalAnalysis').innerHTML = JSON.stringify(analysis, null, 2);
        }

        async function exposeMortgageFraud() {
            const amount = document.getElementById('loanAmount').value;
            const response = await fetch('/mortgage-truth', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({amount: amount})
            });
            const fraud = await response.json();
            document.getElementById('fraudResult').innerHTML = `
                <h4>THE FRAUD:</h4>
                <p>${fraud.truth}</p>
                <p>They created: $${fraud.actual_created.toLocaleString()}</p>
                <p>They stole: $${fraud.bank_profit.toLocaleString()}</p>
            `;
        }

        async function generateSovereigntyDocs() {
            const name = document.getElementById('userName').value;
            const response = await fetch('/sovereignty-docs', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({name: name})
            });
            const docs = await response.json();
            document.getElementById('sovereigntyDocs').innerHTML = 
                `<pre>${docs.document}</pre>`;
        }

        async function showUCCTruth() {
            const response = await fetch('/ucc-citations');
            const ucc = await response.json();
            document.getElementById('uccTruth').innerHTML = 
                JSON.stringify(ucc, null, 2);
        }
    </script>
</body>
</html>
