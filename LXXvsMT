            // INITIALIZE PORTAL
            initializePortal() {
                this.renderResearchGrid();
                this.setupTabSystem();
                this.displayWelcomeMessage();
                this.initializeSpiritualCovering();
            }

            // SETUP TAB SYSTEM
            setupTabSystem() {
                document.querySelectorAll('.tab-btn').forEach(btn => {
                    btn.addEventListener('click', () => {
                        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                        btn.classList.add('active');
                        this.currentTab = btn.getAttribute('data-tab');
                        this.renderResearchGrid();
                    });
                });
            }

            // RENDER RESEARCH GRID
            renderResearchGrid() {
                const grid = document.getElementById('researchGrid');
                grid.innerHTML = '';

                const filteredResearch = this.currentTab === 'all' 
                    ? this.researchItems 
                    : this.researchItems.filter(item => item.tab === this.currentTab);

                filteredResearch.forEach(item => {
                    const researchCard = document.createElement('div');
                    researchCard.className = 'comparison-card';
                    researchCard.innerHTML = `
                        <div class="scripture-icon">${item.icon}</div>
                        <span class="scripture-category">${item.category}</span>
                        <span class="lxx-badge">${item.version}</span>
                        <h3>${item.name}</h3>
                        <p>${item.description}</p>
                    `;
                    
                    researchCard.onclick = () => this.launchResearch(item);
                    grid.appendChild(researchCard);
                });
            }

            // LAUNCH RESEARCH
            launchResearch(item) {
                const confirmation = confirm(
                    `OPEN: ${item.name}\n\n` +
                    `Category: ${item.category}\n` +
                    `Version: ${item.version}\n\n` +
                    `This research presents challenging biblical information.\n\n` +
                    `Proceed?`
                );

                if (confirmation) {
                    this.showResearchInterface(item);
                }
            }

            // SHOW RESEARCH INTERFACE
            showResearchInterface(item) {
                document.getElementById('researchContent').innerHTML = item.html;
                document.getElementById('researchModal').style.display = 'block';
                console.log(`üîç Research opened: ${item.name}`);
            }

            // SPIRITUAL COVERING SYSTEM
            initializeSpiritualCovering() {
                // Load any existing prayer log from localStorage
                const savedPrayers = localStorage.getItem('lxxmt_prayer_log');
                if (savedPrayers) {
                    this.prayerLog = JSON.parse(savedPrayers);
                    this.updatePrayerLogDisplay();
                }
                
                // Add initial protection prayer
                this.addPrayer("Initial spiritual protection activated for research portal");
            }

            addPrayer(prayerText) {
                const prayer = {
                    text: prayerText,
                    timestamp: new Date().toLocaleString(),
                    id: Date.now()
                };
                
                this.prayerLog.unshift(prayer);
                
                // Keep only the last 50 prayers
                if (this.prayerLog.length > 50) {
                    this.prayerLog = this.prayerLog.slice(0, 50);
                }
                
                // Save to localStorage
                localStorage.setItem('lxxmt_prayer_log', JSON.stringify(this.prayerLog));
                
                this.updatePrayerLogDisplay();
            }

            updatePrayerLogDisplay() {
                const prayerLogElement = document.getElementById('prayerLog');
                if (prayerLogElement) {
                    prayerLogElement.innerHTML = '';
                    
                    this.prayerLog.forEach(prayer => {
                        const prayerItem = document.createElement('div');
                        prayerItem.className = 'prayer-item';
                        prayerItem.innerHTML = `
                            <div>${prayer.text}</div>
                            <div class="prayer-timestamp">${prayer.timestamp}</div>
                        `;
                        prayerLogElement.appendChild(prayerItem);
                    });
                }
            }

            startPrivateRosary() {
                if (this.privateRosaryActive) return;
                
                this.privateRosaryActive = true;
                this.addPrayer("Private devotional session started");
                
                alert("üôè Private devotion activated. Your session is not visible to others.");
                
                // Simulate rosary completion after a delay
                setTimeout(() => {
                    this.addPrayer("Private devotional session completed");
                    this.privateRosaryActive = false;
                    alert("üôè Private devotion completed. Spiritual covering maintained.");
                }, 30000); // 30 seconds for demonstration
            }

            displayWelcomeMessage() {
                console.log(`%cüìñ WELCOME TO LXX VS MT RESEARCH`, `
                    font-size: 20px; 
                    color: var(--colombia-yellow); 
                    font-weight: bold; 
                    text-shadow: 0 0 10px var(--colombia-red);
                `);
            }
        }

        // =============================================
        // GLOBAL FUNCTIONS
        // =============================================
        function closeResearch() {
            document.getElementById('researchModal').style.display = 'none';
        }

        function emergencyStopAll() {
            if (window.researchPortal) {
                window.researchPortal.privateRosaryActive = false;
            }
            closeResearch();
            alert("üö® ALL PROCESSES STOPPED");
            console.log("üö® Research portal emergency stop");
        }

        function showSpiritualCovering() {
            const spiritualSection = document.getElementById('spiritualSection');
            spiritualSection.style.display = 'block';
            
            if (window.researchPortal) {
                window.researchPortal.addPrayer("User inquired about spiritual covering");
            }
            
            updateStatus("Spiritual Covering: ACTIVE");
        }

        function addPersonalPrayer() {
            const prayerText = prompt("Enter your personal prayer request:");
            if (prayerText && window.researchPortal) {
                window.researchPortal.addPrayer("Personal prayer: " + prayerText);
                alert("üôè Your prayer has been added to our spiritual covering.");
            }
        }

        function startPrivateRosary() {
            if (window.researchPortal) {
                window.researchPortal.startPrivateRosary();
            }
        }

        function saveResearchProgress() {
            alert("üíæ Research progress saved. You can return to this session later.");
            // In a real implementation, this would save to localStorage or a database
        }

        function updateStatus(msg) {
            const statusEl = document.getElementById('statusBar');
            if (statusEl) {
                statusEl.textContent = `Research Portal: ACTIVE | ${msg} | Focus: TRUTH`;
            }
        }

        // =============================================
        // INITIALIZE THE RESEARCH PORTAL
        // =============================================
        const researchPortal = new LXXMTResearchPortal();
        window.researchPortal = researchPortal;
        
        document.addEventListener('DOMContentLoaded', () => {
            researchPortal.initializePortal();
        });

    </script>
</body>
</html>
