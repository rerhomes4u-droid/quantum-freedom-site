            const message = messages[Math.floor(Math.random() * messages.length)];
            showLoveMessage(message);
            
            // Efecto visual
            document.body.style.animation = 'heartbeat 1s 3';
            setTimeout(() => {
                document.body.style.animation = '';
            }, 3000);
        }
        
