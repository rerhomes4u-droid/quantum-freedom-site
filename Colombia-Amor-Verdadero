        function showLoveMessage(message) {
            const notification = document.createElement('div');
            notification.textContent = message;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                left: 50%;
                transform: translateX(-50%);
                background: linear-gradient(135deg, var(--amor), var(--pasion));
                color: white;
                padding: 20px 40px;
                border-radius: 50px;
                z-index: 10000;
                font-weight: bold;
                font-size: 1.2em;
                text-align: center;
                box-shadow: 0 15px 40px rgba(233, 30, 99, 0.4);
                border: 3px solid white;
                animation: slideDown 0.5s forwards, fadeUp 0.5s 3s forwards;
                max-width: 500px;
                width: 90%;
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if(notification.parentNode) {
                    notification.remove();
                }
            }, 3500);
        }
        
        // Agregar estilos de animaci√≥n
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideDown {
                0% { transform: translateX(-50%) translateY(-100px); opacity: 0; }
                100% { transform: translateX(-50%) translateY(0); opacity: 1; }
            }
            
            @keyframes fadeUp {
                0% { opacity: 1; transform: translateX(-50%) translateY(0); }
                100% { opacity: 0; transform: translateX(-50%) translateY(-50px); }
            }
        `;
        document.head.appendChild(style);
        
        // Efectos interactivos
        document.addEventListener('DOMContentLoaded', function() {
            // Efecto en testimonios
            document.querySelectorAll('.testimonial-card').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    const avatar = this.querySelector('.testimonial-avatar');
                    avatar.style.transform = 'scale(1.2) rotate(5deg)';
                    avatar.style.transition = 'transform 0.3s';
                });
                
                card.addEventListener('mouseleave', function() {
                    const avatar = this.querySelector('.testimonial-avatar');
                    avatar.style.transform = 'scale(1) rotate(0deg)';
                });
            });
            
            // Efecto en bot√≥n de desaf√≠o
            const challengeBtn = document.querySelector('.challenge-button');
            if(challengeBtn) {
                setInterval(() => {
                    challengeBtn.style.transform = 'translateY(-5px) scale(1.02)';
                    setTimeout(() => {
                        challengeBtn.style.transform = '';
                    }, 1000);
                }, 5000);
            }
            
            // Efecto de corazones flotantes
            setInterval(() => {
                if(Math.random() > 0.7) {
                    createFloatingHeart();
                }
            }, 3000);
        });
        
        function createFloatingHeart() {
            const heart = document.createElement('div');
            heart.textContent = '‚ù§Ô∏è';
            heart.style.cssText = `
                position: fixed;
                top: 100vh;
                left: ${Math.random() * 100}vw;
                font-size: ${20 + Math.random() * 30}px;
                opacity: ${0.3 + Math.random() * 0.5};
                z-index: -1;
                pointer-events: none;
                animation: floatUp ${3 + Math.random() * 4}s linear forwards;
            `;
            
            document.body.appendChild(heart);
            
            setTimeout(() => {
                if(heart.parentNode) {
                    heart.remove();
                }
            }, 7000);
        }
        
        // Agregar animaci√≥n flotante
        const floatStyle = document.createElement('style');
        floatStyle.textContent = `
            @keyframes floatUp {
                0% { transform: translateY(0) rotate(0deg); opacity: 0; }
                10% { opacity: 1; }
                90% { opacity: 0.8; }
                100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
            }
        `;
        document.head.appendChild(floatStyle);
        
        // Mensaje inicial
        setTimeout(() => {
            showLoveMessage('üá®üá¥ Bienvenid@ al coraz√≥n de Colombia');
        }, 1000);
    </script>
</body>
</html>
